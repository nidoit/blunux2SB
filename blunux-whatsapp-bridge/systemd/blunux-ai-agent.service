[Unit]
Description=Blunux AI Agent Daemon
Documentation=https://github.com/nidoit/blunux2SB
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/blunux-ai daemon
Restart=on-failure
RestartSec=5s

# 보안 샌드박싱 / Security sandboxing
NoNewPrivileges=true
PrivateTmp=true
ProtectHome=read-only
ProtectSystem=strict
ReadWritePaths=%h/.config/blunux-ai %h/.cache/blunux-ai /run/user/%U

# 로깅 / Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=blunux-ai

[Install]
WantedBy=default.target
